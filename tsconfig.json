{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "es6",
        "target": "es6",
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*"
            ]
        },
        "declaration": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "test",
        "node_modules",
        "webpack.config.ts"
    ]
}
